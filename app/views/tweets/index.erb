<h1>Welcome, <%= @user.username %></h1>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>Id</th>
        <th>User</th>
        <th>Content</th>
    </tr>
<% @tweets.each.with_index(1) do |tweet, index| %>
    <tr>
        <td><%= index %>.</td>
        <td><a href="/users/<%= tweet.user.slug %>"><%= tweet.user.username %></a></td>
        <td><%= tweet.content %></td>
    </tr>
<% end %>
</table>