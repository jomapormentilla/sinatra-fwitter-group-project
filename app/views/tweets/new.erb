<div class="row">
  <div class="col-md-12">
    <h1>Create a New Tweet</h1>
    <% if flash.has?(:message) %>
      <div class="alert alert-<%= flash[:alert_type] %>"><%= flash[:message] %></div>
    <% end %>
    <form action='/tweets' method="POST">
      <textarea type="text" id="content" name="content" placeholder="Tweet Content Here..." class="form-control"></textarea><br />
      <input type="submit" name="submit" id="submit" class="btn btn-primary btn-block">
    </form>
  </div>
</div>